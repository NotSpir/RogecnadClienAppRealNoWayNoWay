<Page x:Class="RogecnadClienAppRealNoWayNoWay.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RogecnadClienAppRealNoWayNoWay.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1800"
      Title="RegisterPage">

    <Grid>
        <Grid Width="350" Height="850" Background="{StaticResource ColorBackgroundFade}" Margin="0 0 60 40" />
        <Grid Width="350" Height="850" Background="{StaticResource ColorAccentBackground}">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="20" />
                <RowDefinition Height="660" />
                <RowDefinition Height="50" />
                <RowDefinition Height="80" />
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal">
                <Button Background="Transparent" BorderBrush="Transparent" Width="50" Height="50" HorizontalAlignment="Left" Margin="20 0 0 0">
                    <Image Source="/Resources/ArrowLeft.png" />
                </Button>
                <TextBlock Text="Регистрация" Margin="15 0 0 0" Foreground="White" FontSize="32" />
            </StackPanel>

            <Line Stretch="Fill" Stroke="{StaticResource ColorAccent}" Grid.Row="1" StrokeThickness="6" X2="1" Width="310"/>

            <StackPanel Grid.Row="2">
                <StackPanel Margin="0 20 0 40">
                    <TextBlock Text="Электронная почта" Foreground="White" Width="250" TextAlignment="Left" Height="30" FontSize="22"/>
                    <TextBox Background="{StaticResource ColorPrimaryBackground}" Width="250" Height="40" Foreground="White" FontSize="18" />
                </StackPanel>
                <StackPanel Margin="0 0 0 40">
                    <TextBlock Text="Логин" Foreground="White" Width="250" TextAlignment="Left" Height="30" FontSize="22"/>
                    <TextBox Background="{StaticResource ColorPrimaryBackground}" Width="250" Height="40" Foreground="White" FontSize="18" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Пароль" Foreground="White" Width="250" TextAlignment="Left" Height="30" FontSize="22"/>
                    <StackPanel Orientation="Horizontal">
                        <PasswordBox Margin="50 0 0 40" Background="{StaticResource ColorPrimaryBackground}" Width="250" Height="40" Foreground="White" FontSize="18"/>
                        <Button Background="Transparent" BorderBrush="Transparent">
                            <Image Source="/Resources/ClosedEyeIcon.png" Width="40"/>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <StackPanel Margin="0 0 0 20">
                    <TextBlock Text="Дата рождения" Foreground="White" Width="250" TextAlignment="Left" Height="30" FontSize="22"/>
                    <DatePicker Background="{StaticResource ColorPrimaryBackground}" Width="250" Height="40" Foreground="White" FontSize="18">
                        <DatePicker.Resources>
                            <Style TargetType="DatePickerTextBox">
                                <Setter Property="Background" Value="{StaticResource ColorBackgroundFade}" />
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>
                </StackPanel>

                <StackPanel Margin="0">
                    <CheckBox Foreground="White" Width="250" Height="120" FontSize="22">
                        <TextBlock Text="Я прочитал и согласен с Политикой конфиденциальности RogeCnad" FontSize="14" TextWrapping="Wrap" />
                    </CheckBox>
                    <TextBlock Text="Нажимая «Зарегистрироваться», Вы принимаете Условия пользования RogeCnad" Margin="0 -60 0 0" Width="250" Foreground="White" FontSize="14" TextWrapping="Wrap" />
                </StackPanel>

                <Button Height="50" Width="250" Background="{StaticResource ColorAccent}" Margin="0 30 0 0" Content="Войти" Foreground="White" FontSize="26">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="15"></Setter>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Background="Transparent" BorderBrush="Transparent" Margin="0 10 0 0">
                    <TextBlock Foreground="White" Width="180" TextAlignment="Center" Height="50" FontSize="24" TextDecorations="Underline">Забыли пароль?</TextBlock>
                </Button>
            </StackPanel>

            <Line Stretch="Fill" Stroke="{StaticResource ColorAccent}" Grid.Row="3" StrokeThickness="6" X2="1" Width="310"/>

            <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Left">
                <TextBlock Margin="30 0 0 0" Foreground="Gray" Width="120" TextAlignment="Center" Height="50" FontSize="18">Есть аккаунт?</TextBlock>
                <Button Background="Transparent" BorderBrush="Transparent" Margin="0" Name="LogInButton" Click="LogInButton_Click">
                    <TextBlock Foreground="White" Width="185" TextAlignment="Center" Height="50" FontSize="18" TextDecorations="Underline">Войти в аккаунт</TextBlock>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
